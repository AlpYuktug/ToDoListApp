<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">


    <ImageView
        android:id="@+id/imageViewItemAdd"
        android:layout_width="242dp"
        android:layout_height="105dp"
        android:layout_marginTop="52dp"
        app:layout_constraintEnd_toEndOf="@+id/textViewSelectedDate"
        app:layout_constraintHorizontal_bias="0.542"
        app:layout_constraintStart_toStartOf="@+id/imageViewCalendar"
        app:layout_constraintTop_toBottomOf="@+id/imageViewCalendar"
        app:srcCompat="@drawable/button" />

    <TextView
        android:id="@+id/textViewDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="@string/ToDoItemDeadLine"
        android:textColor="@color/colorAccent"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/editTextToDoItemDesc"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/editTextToDoItemDesc"
        app:layout_constraintTop_toBottomOf="@+id/editTextToDoItemDesc" />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/editTextToDoItemName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="16dp"
        android:ems="16"
        android:hint="@string/ToDoItemName"
        android:inputType="textEmailAddress"
        android:scrollbarThumbHorizontal="@android:color/background_light"
        android:scrollbarThumbVertical="@android:color/background_light"
        android:textColor="@android:color/background_light"
        android:textColorHint="@color/colorAccent"
        android:textColorLink="@android:color/transparent"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:met_floatingLabel="highlight"
        app:met_textColor="@color/colorAccent"
        app:met_textColorHint="@color/colorAccent" />

    <ImageView
        android:id="@+id/imageViewCalendar"
        android:layout_width="79dp"
        android:layout_height="80dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="@+id/textViewDate"
        app:layout_constraintTop_toBottomOf="@+id/textViewDate"
        app:srcCompat="@drawable/calendaricon" />

    <TextView
        android:id="@+id/textViewSelectedDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/colorAccent"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewCalendar"
        app:layout_constraintEnd_toEndOf="@+id/textViewDate"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/imageViewCalendar"
        app:layout_constraintTop_toTopOf="@+id/imageViewCalendar" />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/editTextToDoItemDesc"
        android:layout_width="0dp"
        android:layout_height="62dp"
        android:layout_marginTop="36dp"
        android:ems="16"
        android:hint="@string/ToDoItemDescription"
        android:inputType="textEmailAddress"
        android:scrollbarThumbHorizontal="@android:color/background_light"
        android:scrollbarThumbVertical="@android:color/background_light"
        android:textColor="@android:color/background_light"
        android:textColorHint="@color/colorAccent"
        android:textColorLink="@android:color/transparent"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/editTextToDoItemName"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/editTextToDoItemName"
        app:layout_constraintTop_toBottomOf="@+id/editTextToDoItemName"
        app:met_floatingLabel="highlight"
        app:met_textColor="@color/colorAccent"
        app:met_textColorHint="@color/colorAccent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Done"
        android:textColor="@android:color/background_light"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewItemAdd"
        app:layout_constraintEnd_toEndOf="@+id/imageViewItemAdd"
        app:layout_constraintStart_toStartOf="@+id/imageViewItemAdd"
        app:layout_constraintTop_toTopOf="@+id/imageViewItemAdd" />

    <ImageView
        android:id="@+id/imageViewCancel"
        android:layout_width="0dp"
        android:layout_height="105dp"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="@+id/imageViewItemAdd"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/imageViewItemAdd"
        app:layout_constraintTop_toBottomOf="@+id/imageViewItemAdd"
        app:srcCompat="@drawable/button" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@android:string/cancel"
        android:textColor="@android:color/background_light"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewCancel"
        app:layout_constraintEnd_toEndOf="@+id/imageViewCancel"
        app:layout_constraintStart_toStartOf="@+id/imageViewCancel"
        app:layout_constraintTop_toTopOf="@+id/imageViewCancel" />
</androidx.constraintlayout.widget.ConstraintLayout>

